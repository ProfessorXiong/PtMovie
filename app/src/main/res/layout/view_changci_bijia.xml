<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#a7a6a6"
    android:padding="5dp">
    <ImageView
        android:id="@+id/view_changci_bijia_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/view_changci_bijia_tv_cpname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/view_changci_bijia_image"
        android:layout_centerVertical="true"
        android:text="商家名称"/>
    <TextView
        android:id="@+id/view_changci_bijia_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="价格"
        android:textColor="#f00"/>
    <View
        android:layout_below="@id/view_changci_bijia_image"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="1dp" />
</RelativeLayout>
